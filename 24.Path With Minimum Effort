problem link : https://www.geeksforgeeks.org/problems/path-with-minimum-effort/1?utm_source=youtube&utm_medium=collab_striver_ytdescription&utm_campaign=path-with-minimum-effort


from heapq import heapify, heappush, heappop
from typing import List


class Solution:
    def MinimumEffort(self, rows : int, columns : int, heights : List[List[int]]) -> int:
        n, m = rows, columns 
        distance = [[float('inf')] * m for _ in range(n)]
        distance[0][0] = 0 
        
        heap = [(0, 0, 0)]
        dx = (0, -1, 0, 1, 0)
        
        while heap:
            maxDiff, row, col = heappop(heap)
            
            if row == n-1 and col == m-1: 
                return maxDiff 
            
            for i in range(4):
                x = row + dx[i]
                y = col + dx[i+1]
                
                if 0<= x < n and 0<= y < m:
                    currDiff = abs(heights[row][col] - heights[x][y])
                    if currDiff < distance[x][y]:
                        distance[x][y] = currDiff
                        heappush(heap, (max(maxDiff, currDiff), x, y))
            
        return distance[-1][-1]
        
        
''' time complexity : O(n*m * 4 * log(n*m))
    space complexity : O(n*m)
'''      

