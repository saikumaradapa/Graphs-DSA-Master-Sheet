####################################################################################################################################################################################################
# DFS method

class Solution:
    def dfs(self, node, visited, stack, adj):
        visited[node] = 1 
        
        for adjNode in adj[node]:
            if not visited[adjNode]:
                self.dfs(adjNode, visited, stack, adj)
        stack.append(node)
    
    def topoSort(self, V, adj):
        stack = []
        visited = [0] * V 
        
        for i in range(V):
            if not visited[i]:
                self.dfs(i, visited, stack, adj)
        
        return stack[::-1]

''' time complexity : O(V + 2E)
    space complexity : O(V) 
'''        



####################################################################################################################################################################################################
# Kahn's Algorithm with indegree     ||  BFS 

from collections import deque
class Solution:
    
    def topoSort(self, V, adj):
        indegree = [0] * V 
        for u in range(V):
            for v in adj[u]:
                indegree[v] += 1
        
        q = deque([])
        for i in range(V):
            if indegree[i] == 0:
                q.append(i)
        
        
        res = []
        while q:
            node = q.popleft()
            res.append(node)
            
            for adjNode in adj[node]:
                indegree[adjNode] -= 1 
                if not indegree[adjNode]:
                    q.append(adjNode)
        
        return res
        
        
